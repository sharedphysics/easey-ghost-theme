{{!< ../default}}

<div class="content-area">
  <main class="site-main">
    {{#if @member.paid}}
      <script>window.location = '{{@site.url}}';</script>
    {{else if @member}}
      <section class="plan-container">
        <header class="page-header">
          <h1 class="page-heading">{{t 'Choose your subscription'}}</h1>
          <p class="page-subheading">{{t 'Unlock full access to {site} and see the entire library of members-only content & updates' site=@site.title}}</p>
        </header>
        <div class="plan-list">
          <section class="plan">
            <header class="plan-header">
              <h2 class="plan-title">{{t 'Monthly'}}</h2>
              <div class="plan-price">
                <div class="plan-amount">${{@price.monthly}}</div>
                {{t '/per month'}}
              </div>
            </header>
            <ul class="plan-feature-list">
              <li class="plan-feature">Full access to all private posts</li>
              <li class="plan-feature">Regular updates with new content</li>
              <li class="plan-feature">Support independent publishing</li>
              <li class="plan-feature">Simple, secure card payment</li>
            </ul>
            <button class="button" data-members-plan="Monthly">{{t 'Choose monthly'}}</button>
          </section>
          <section class="plan">
            <header class="plan-header">
              <h2 class="plan-title">{{t 'Yearly'}}</h2>
              <div class="plan-price">
                <div class="plan-amount">${{@price.yearly}}</div>
                {{t '/per year'}}
              </div>
            </header>
            <ul class="plan-feature-list">
              <li class="plan-feature">Full access to all private posts</li>
              <li class="plan-feature">Regular updates with new content</li>
              <li class="plan-feature">Support independent publishing</li>
              <li class="plan-feature">Simple, secure card payment</li>
              <li class="plan-feature">One easy payment instead of 12!</li>
            </ul>
            <button class="button" data-members-plan="Yearly">{{t 'Choose yearly'}}</button>
          </section>
        </div>
      </section>
    {{else}}
      {{> subscribe footer=true}}
    {{/if}}
  </main>
</div>

{{#contentFor "body_class"}}page-members{{/contentFor}}
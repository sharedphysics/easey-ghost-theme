{{!< default}}

<div class="content-area">
  <main class="site-main">
    <div class="term">
      {{#tag}}
        <h1 class="term-name">{{name}}</h1>
        {{#if description}}
          <div class="term-description">{{description}}</div>
        {{/if}}
      {{/tag}}
    </div>
    <div class="post-feed kg-width-normal u-hover-wrapper">
      {{#foreach posts}}
        {{> loop tag="h2"}}
      {{/foreach}}
    </div>
    {{pagination}}
  </main>
</div>